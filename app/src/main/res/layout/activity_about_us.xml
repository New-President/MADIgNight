<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUsActivity"
    android:background="@drawable/gradient_background">

  <ImageButton
      android:id="@+id/aboutus_back_to_main"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

  <TextView
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:id="@+id/about_us_info"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/aboutus_back_to_main"
      android:layout_marginStart="50dp"
      android:layout_marginEnd="50dp"
      android:textSize="16sp"
      android:textColor="#000000"
      android:text="We are a group of Year 2 students from Ngee Ann Polytechnic, Singapore. This app is created as an assignment for the module Mobile Application Development."
      android:textAlignment="center"/>

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/about_view"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/about_us_info"
      android:layout_marginTop="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>